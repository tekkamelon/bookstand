// x軸方向に90度回転
rotate([90, 0, 0]){

	color("red")

	// 厚みを20mmに設定
	linear_extrude(20){

		polygon(points=[[0, 0], [0, 40], [15, 40], [15, 20], [35, 20], [65, 100], [100, 100], [100, 0]]); //時計回り

	}

}

// x方向に80mm,y軸方向に-100mm移動
translate([80, -100, 0]){

	// x軸とz軸方向に90度回転
	rotate([90, 0, 90]){

		// 厚みを20mmに設定
		linear_extrude(20){

			polygon(points=[[0, 0], [0, 40], [15, 40], [15, 20], [35, 20], [65, 100], [100, 100], [100, 0]]); //時計回り

		}
		
	}

}

